@model ClienteViewModel;
@{
    ViewData["Title"] = "Home Page";
}


<form asp-action="" method="post" class="needs-validation" novalidate>
    <div class="row">
        <div class="row">
            <div class="col-xl-8">
                <div class="card" style="min-height: 409px;">
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="g-4  col-4">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control"/>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="g-4  col-4">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control"/>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="g-4  col-4">
                                <label asp-for="Idade" class="control-label"></label>
                                <input asp-for="Idade" class="form-control"/>
                                <span asp-validation-for="Idade" class="text-danger"></span>
                            </div>
                                <div class="g-4 col-4">
                                <button type="submit" class="btn btn-outline-primary">Salvar</button>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</form>